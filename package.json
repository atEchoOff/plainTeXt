{
  "name": "plaintext",
  "version": "1.0.1",
  "main": "electron.js",
  "author": "Brian Christner <at.echo.off@outlook.com>",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.atech.plaintext",
    "productName": "plainTeXt",
    "files": [
      "dist/*.js",
      "dist/pyscript/*",
      "style/*",
      "style/fonts/*",
      "script/*",
      "electron.js",
      "index.html",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icons/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "icons/icon.svg"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "icons/icon.ico"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atEchoOff/plaintext.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/atEchoOff/plaintext/issues"
  },
  "homepage": "https://github.com/atEchoOff/plaintext#readme",
  "description": "",
  "devDependencies": {
    "browserify": "^17.0.1",
    "electron": "^37.0.0",
    "electron-builder": "^26.0.12",
    "esbuild": "0.25.5"
  },
  "dependencies": {
    "@codemirror/lang-java": "^6.0.2",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-python": "^6.2.1",
    "@pyscript/core": "^0.6.60",
    "codemirror": "^6.0.2",
    "codemirror-lang-bibtex": "github:citedrive/lang-bibtex",
    "prosemirror-commands": "^1.7.0",
    "prosemirror-history": "^1.4.1",
    "prosemirror-inputrules": "^1.5.0",
    "prosemirror-keymap": "^1.2.2",
    "prosemirror-model": "^1.25.0",
    "prosemirror-schema-basic": "^1.2.4",
    "prosemirror-state": "^1.4.3",
    "prosemirror-transform": "^1.10.3",
    "prosemirror-view": "^1.38.1"
  }
}
